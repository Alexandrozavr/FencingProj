<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Name="myMainWindow"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=myMainWindow, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=myMainWindow, Path=ScaleValue}" />
        </Grid.LayoutTransform>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="741*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>
        <Rectangle HorizontalAlignment="Center" Width="613" Margin="0,65,0,65">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="Red" Offset="0.0" />
                    <GradientStop Color="Red" Offset="0.3" />
                    <GradientStop Color="Black" Offset="0.5" />
                    <GradientStop Color="Blue" Offset="0.7" />
                    <GradientStop Color="Blue" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBox x:Name="RedFighterName" HorizontalAlignment="Left" Margin="78,0,0,299" TextWrapping="Wrap" Text="Красный Боец" VerticalAlignment="Bottom" Width="266" Height="51" FontSize="36"/>
        <TextBox x:Name="BlueFighterName" HorizontalAlignment="Left" Margin="400,0,0,300" TextWrapping="Wrap" Text="Синий Боец" VerticalAlignment="Bottom" Width="266" Height="50" FontSize="36"/>
        <Separator Margin="0,140,0,283" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <TextBox x:Name="redFighterPointsCounter" HorizontalAlignment="Left" Margin="78,0,0,215" TextWrapping="Wrap" Text="0" VerticalAlignment="Bottom" Width="175" Height="55" FontSize="36" TextAlignment="Center"/>
        <Button x:Name="NullerRed" Content="0" HorizontalAlignment="Left" Margin="282,0,0,215" VerticalAlignment="Bottom" FontSize="36" Width="42" Height="55"/>
        <TextBox x:Name="blueFighterPointsCounter" HorizontalAlignment="Left" Margin="400,164,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="175" Height="55" FontSize="36" TextAlignment="Center"/>
        <Button x:Name="NullerBlue" Content="0" HorizontalAlignment="Left" Margin="605,0,0,215" VerticalAlignment="Bottom" FontSize="36" Width="42" Height="55"/>
        <Button x:Name="AddPointToRed" Content="+1" HorizontalAlignment="Left" Margin="187,0,0,137" VerticalAlignment="Bottom" Width="55" Height="55" FontSize="36"/>
        <Button x:Name="RemovePointFromRed" Content="-1" HorizontalAlignment="Left" Margin="78,0,0,137" VerticalAlignment="Bottom" Width="55" Height="55" FontSize="36"/>
        <Button x:Name="AddPointToBlue" Content="+1" HorizontalAlignment="Left" Margin="399,0,0,137" VerticalAlignment="Bottom" Width="55" Height="55" FontSize="36"/>
        <Button x:Name="RemovePointFromBlue" Content="-1" HorizontalAlignment="Left" Margin="519,0,0,137" VerticalAlignment="Bottom" Width="55" RenderTransformOrigin="1.036,-0.327" Height="55" FontSize="36"/>
        <Label Content="Обоюные поражения" HorizontalAlignment="Left" Margin="133,391,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ScrollBar HorizontalAlignment="Left" Margin="327,384,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
