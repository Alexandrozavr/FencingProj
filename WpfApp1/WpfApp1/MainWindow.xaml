<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Name="myMainWindow"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=myMainWindow, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=myMainWindow, Path=ScaleValue}" />
        </Grid.LayoutTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="229*"/>
            <RowDefinition Height="62*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Rectangle  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" RadiusX="15" RadiusY="15">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="Red" Offset="0.0" />
                    <GradientStop Color="Red" Offset="0.3" />
                    <GradientStop Color="Black" Offset="0.5" />
                    <GradientStop Color="Blue" Offset="0.7" />
                    <GradientStop Color="Blue" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBox x:Name="RedFighterName" TextWrapping="Wrap" Text="Красный Боец"   FontSize="36" Grid.Row="1" Grid.Column="1" Margin="10,15,10,15"/>
        <TextBox x:Name="BlueFighterName" TextWrapping="Wrap" Text="Синий Боец"  FontSize="36" Grid.Column="2" Grid.Row="1" Margin="10,15,10,15"/>
        <Separator Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top"/>
        <TextBox x:Name="redFighterPointsCounter" HorizontalAlignment="Left" Margin="20,17,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="100" Height="55" FontSize="36" TextAlignment="Center" Grid.Row="2" Grid.Column="1"/>
        <Button x:Name="NullerRed" Content="0" HorizontalAlignment="Left" Margin="193,17,0,0" VerticalAlignment="Top" FontSize="36" Width="42" Height="55" Grid.Row="2" Grid.Column="1"/>
        <TextBox x:Name="blueFighterPointsCounter" HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="175" Height="55" FontSize="36" TextAlignment="Center" Grid.Column="2" Grid.Row="2"/>
        <Button x:Name="NullerBlue" Content="0" Margin="268,20,0,0" VerticalAlignment="Top" FontSize="36" Height="55" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" Width="42"/>
        <Button x:Name="AddPointToRed" Content="+1" HorizontalAlignment="Left" Margin="249,0,0,157" VerticalAlignment="Bottom" Width="55" Height="55" FontSize="36" Grid.Row="2" Grid.Column="1"/>
        <Button x:Name="RemovePointFromRed" Content="-1" HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" Width="56" Height="55" FontSize="36" Grid.Row="2" Grid.Column="1"/>
        <Button x:Name="AddPointToBlue" Content="+1" HorizontalAlignment="Left" Margin="129,91,0,0" VerticalAlignment="Top" Width="56" Height="55" FontSize="36" Grid.Column="2" Grid.Row="2"/>
        <Button x:Name="RemovePointFromBlue" Content="-1" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Width="54" RenderTransformOrigin="1.036,-0.327" Height="55" FontSize="36" Grid.Column="2" Grid.Row="2"/>


    </Grid>
</Window>
